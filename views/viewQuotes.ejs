<!DOCTYPE html>
<html>
<head>
  <title>View Quotes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
  <link rel="shortcut icon" href="assets/Bidvest-Protea-Coin-Logo.png" type="image/x-icon" />
 <style>
    body {
      background-color: #1c1c2b;
      color: aliceblue;
    }
    .table td, .table th {
      vertical-align: middle;
    }
    .list-group-item a {
      text-decoration: none;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <% if (!selectedName) { %>
      <h2 class="mb-4">View Quotes (All Salespeople)</h2>
    <h4>Select a Salesperson:</h4>
    <ul class="list-group">
      <% quotes.forEach(quote => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a 
            href="/viewQuotes?name=<%= encodeURIComponent(quote.name) %>" 
            class="<%= quote.is_allowed === 0 ? 'text-danger fw-bold' : '' %>"
          >
            <%= quote.name %>
          </a>
          <% if (quote.is_allowed === 0) { %>
            <span class="badge bg-danger">Removed</span>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <h4 class="mb-3">Quotes for <%= selectedName %></h4>
    <% if (quotes.length > 0) { %>
          <div class="mb-3">
            <input 
               type="text" 
               id="searchInput" 
               class="form-control" 
               placeholder="Search by customerName, email, reference" >
          </div>
    <table class="table table-bordered text-white">
  <thead>
    <tr>
       <th>Reference</th>
      <th>Customer Name</th>
      <th>Customer Email</th>
      <th>Customer Cell</th>
      <th>Job Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% quotes.forEach(quote => { 
         const itemsForThisRef = items[quote.reference];
         const bill = itemsForThisRef?.[0]?.bill; // get bill if available
    %>
      <tr>
        <td><%= quote.reference %></td>
        <td><%= quote.customerName %></td>
        <td><%= quote.customerEmail %></td>
       <td><%= quote.customerCell %></td>
        <td><%= quote.jobDescription %></td>
        <td>
  <% if (itemsForThisRef && itemsForThisRef.length > 0) { %>
    <a href="/viewitems?reference=<%= quote.reference %>" class="block bg-green-600 hover:bg-green-500 p-3 rounded text-blue text-center">View Items</a>
  <% } else { %>
    <span class="text-muted">No Items</span>
  <% } %>
</td>
      </tr>
    <% }); %>
  </tbody>
</table>
    <% } else { %>
      <p>No quotes found for this salesperson.</p>
    <% } %>  
    <a href="/viewQuotes" class="btn btn-secondary mt-3">‚Üê Back to Salespeople</a>
  <% } %>
  <a href="/login" class="btn btn-outline-light ms-2 mt-3">Back to Login</a>
</div>
<script>
  document.getElementById('searchInput').addEventListener('input', function () {
    const searchValue = this.value.toLowerCase();
    const rows = document.querySelectorAll('table tbody tr');
    rows.forEach(row => {
      const text = row.innerText.toLowerCase();
      row.style.display = text.includes(searchValue) ? '' : 'none';
    });
  });
</script>
</body>
</html>
