<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Billing Summary</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="shortcut icon" href="assets/Bidvest-Protea-Coin-Logo.png" type="image/x-icon" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      color: #212529;
  }
    h2 {
      text-align: center;
      margin: 30px 0;
      font-weight: bold;
    }
    .table-container {
      overflow-x: auto; 
      padding: 0 10px;
    }
    table {
      font-size: 13px;
    }
    th {
      background-color: #0d6efd;
      color: white;
      text-align: center;
      white-space: nowrap;
    }
    td {
      vertical-align: middle;
      white-space: nowrap;
    }
    .footer {
      text-align: center;
      margin: 30px 0 10px;
      font-size: 14px;
      color: #6c757d;
    }
  </style>
</head>
<body>
  <%
    function formatAccounting(amount) {
      const num = parseFloat(amount || 0);
      const isNegative = num < 0;
      const formatted = Math.abs(num).toLocaleString('en-ZA', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
      }).replace(/,/g, ' ');
      return isNegative ? `R (${formatted})` : `R ${formatted}`;
    }
  %>
  <div class="container-fluid">
    <h2>Bill Summary</h2>
    <div class="table-container">
      <table class="table table-bordered table-striped table-hover align-middle">
        <thead>
          <tr>
            <th>Action</th>
            <th>Bill</th>
            <th>Labour Hrs</th>
            <th>Labour Cost</th>
            <th>Labour Selling</th>
            <th>Equipment Cost</th>
            <th>Equipment Selling</th>
            <th>PM Cost</th>
            <th>PM Selling</th>
            <th>PM Hrs</th>
            <th>Maint Hrs</th>
            <th>Sundries Cost</th>
            <th>Sundries Selling</th>
            <th>P & G Cost</th>
            <th>P & G Selling</th>
            <th>Bill Cost Total</th>
            <th>Bill Sell Total</th>
            <th>HW Replace Prov</th>
          </tr>
        </thead>
        <tbody>
          <% groupedItems.bills.forEach((bill) => { %>
            <tr>
              <td>
                <a href="/items?bill=<%= bill.bill %>&reference=<%= reference %>" 
                   class="btn btn-sm btn-info">View Items</a>
              </td>
              <td><%= bill.bill %></td>
              <td><%= bill.totalLabourHours %></td>
              <td><%= formatAccounting(bill.bill_labourCost) %></td>
              <td><%= formatAccounting(bill.bill_labourSell) %></td>
              <td><%= formatAccounting(bill.bill_equipment_cost) %></td>
              <td><%= formatAccounting(bill.bill_equipment_selling) %></td>
              <td><%= formatAccounting(bill.pm_cost) %></td>
              <td><%= formatAccounting(bill.pm_selling) %></td>
              <td><%= bill.pm_hrs %></td>
              <td><%= bill.totalMaintLabFactor %></td>
              <td><%= formatAccounting(bill.sundries_cost) %></td>
              <td><%= formatAccounting(bill.sundries_selling) %></td>
              <td>R 0.00</td>
              <td>R 0.00</td>
              <td><%= formatAccounting(bill.bill_tot_cost) %></td>
              <td><%= formatAccounting(bill.bill_tot_selling) %></td>
              <td><%= formatAccounting(bill.hwReplace) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <a href="/billSummary" class="btn btn-primary mt-3">Print Bill Summary</a>
    </div>
  </div>
  <div class="footer">
    <p>&copy; <%= new Date().getFullYear() %> Bidvest Protea Coin</p>
  </div>
</body>
</html>
