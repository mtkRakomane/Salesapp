<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Billing Summary</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: whitesmoke;
      font-family: Arial, sans-serif;
    }
    table {
      border-collapse: collapse;
      margin: 20px auto;
      font-size: 12px;
      width: 98%;
    }
    th, td {
      border: 1px solid #000;
      padding: 6px 10px;
      text-align: left;
    }
    th {
      background-color: #f8f9fa;
    }
    h2 {
      text-align: center;
      margin-top: 20px;
    }
    .footer {
      background-color: #343a40;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSLl5RFBWd70u8xNBu3mBTfHBq-Y1TzCuXJ5w&s" width="50" height="50" alt="logo"/>
      </a>
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link">Home</a></li>
        <li class="nav-item"><a class="nav-link">Overview</a></li>
        <li class="nav-item"><a class="nav-link" href="/allitems">AllItems</a></li>
      </ul>
    </div>
  </nav>

  <%
    function formatAccounting(amount) {
      const num = parseFloat(amount || 0);
      const isNegative = num < 0;
      const formatted = Math.abs(num).toLocaleString('en-ZA', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
      }).replace(/,/g, ' ');
      return isNegative ? `R (${formatted})` : `R ${formatted}`;
    }
  %>

  <h2>Bill Summary</h2>
  <table>
    <thead>
      <tr>
        <th>Bill</th>
        <th>Labour Hrs</th>
        <th>Labour Cost</th>
        <th>Labour Selling</th>
        <th>Equipment Cost</th>
        <th>Equipment Selling</th>
        <th>PM Cost</th>
        <th>PM Selling</th>
        <th>PM Hrs</th>
        <th>Maint Hrs</th>
        <th>Sundries Cost</th>
        <th>Sundries Selling</th>
        <th>P & G Cost</th>
        <th>P & G Selling</th>
        <th>Bill Cost Total</th>
        <th>Bill Sell Total</th>
        <th>HW Replace Prov</th>
      </tr>
    </thead>
    <tbody>
      <% groupedItems.bills.forEach((bill) => { %>
        <tr>
          <td><%= bill.bill %></td>
          <td><%= bill.totalLabourHours %></td>
          <td><%= formatAccounting(bill.bill_labourCost) %></td>
          <td><%= formatAccounting(bill.bill_labourSell) %></td>
          <td><%= formatAccounting(bill.bill_equipment_cost) %></td>
          <td><%= formatAccounting(bill.bill_equipment_selling) %></td>
          <td><%= formatAccounting(bill.pm_cost) %></td>
          <td><%= formatAccounting(bill.pm_selling) %></td>
          <td><%= bill.pm_hrs %></td>
          <td><%= bill.totalMaintLabFactor %></td>
          <td><%= formatAccounting(bill.sundries_cost) %></td>
          <td><%= formatAccounting(bill.sundries_selling) %></td>
          <td>R 0.00</td>
          <td>R 0.00</td>
          <td><%= formatAccounting(bill.bill_tot_cost) %></td>
          <td><%= formatAccounting(bill.bill_tot_selling) %></td>
          <td><%= formatAccounting(bill.hwReplace) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-center">
 <a href="/billSummary" class="btn btn-primary mt-3">View Bill Summary</a>
  </div>

  <div class="footer">
    <p>&copy; <%= new Date().getFullYear() %> Bidvest Protea Coin</p>
  </div>
</body>
</html>
