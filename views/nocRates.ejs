<!DOCTYPE html>
<html>
<head>
  <title>NOC Equipment Rate Calculations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1e1e2f;
      color: #f5f5f5;
    }
    .table td, .table th {
      color: #f5f5f5;
      vertical-align: middle;
    }
    h2 {
      color: #f5f5f5;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">NOC Equipment Rate Calculations for Reference: <%= reference %></h2>

    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th colspan="3">NOC Rates</th>
          <th colspan="6">Selling Rates</th>
        </tr>
      </thead>
      <thead>
        <tr>
          <th>#Item</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Labour Unit Rate</th>
          <th>Equipment Unit Rate</th>
        </tr>
      </thead>
      <tbody>
        <% let index = 1; %>
       <% for (const item in calculations) { %>
  <% if (item !== 'totMonthlyRate') { %>
    <tr>
      <td><%= index++ %></td>
      <td><%= calculations[item].label %></td> 
      <td><%= calculations[item].quantity %></td>
      <td>R <%= calculations[item].labourUnitRate.toFixed(2) %></td>
      <td>R <%= calculations[item].equipmentUnitRate.toFixed(2) %></td>
    </tr>
  <% } %>
<% } %>

<tr>
  <td>MON</td>
  <td>Alarm Monitoring - per partition</td>
  <td><%= calculations.alarmMonitoring.quantity %></td>
  <td>R 300.00</td>
  <td>R</td>
</tr>
<tr>
  <td>MON</td>
  <td>Armed Response</td>
  <td><%= calculations.armedResponse.quantity %></td>
  <td>R 450.00</td>
  <td>R</td>
</tr>
<tr>
  <td>MON</td>
  <td>SMS - Actionable signals sms to 2 numbers</td>
  <td></td>
  <td>R 50.00</td>
  <td>R</td>
</tr>
<tr>
  <td>MON</td>
  <td>SIM Charge</td>
  <td></td>
  <td>R 65.00</td>
  <td>R</td>
</tr>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4" class="text-end"><strong>Total Monthly Rate:</strong></td>
          <td><strong>R <%= calculations.totMonthlyRate.toFixed(2) %></strong></td>
        </tr>
      </tfoot>
    </table>
  </div>
</body>
</html>
