<!DOCTYPE html>
<html>
<head>
  <title>Register Customer</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <form class="signup-form" action="/register-customer" method="POST">
      <h1>Register New Customer</h1>
        <div class="signup-form-group">
            <label for="reference">Reference:</label>
            <input type="text" id="reference" name="reference" placeholder="Reference:" required>
        </div>
        <div class="signup-form-group">
            <label for="customerName">Customer Name:</label>
            <input type="text" id="customerName" name="customerName" placeholder="Customer Name:" required>
        </div>
        <div class="signup-form-group">
            <label for="customerEmail">Customer Email:</label>
            <input type="email" id="customerEmail" name="customerEmail" placeholder="Customer Email:" required>
        </div>
        <div class="signup-form-group">
            <label for="customerCell">Customer Cell:</label>
            <input type="tel" id="customerCell" name="customerCell" placeholder="Customer Cell:" required>
        </div>
        <div class="signup-form-group">
            <label for="jobDescription">Job Description:</label>
            <textarea id="jobDescription" name="jobDescription" placeholder="Job Description:" required></textarea>
        </div>  
            <div class="signup-form-group">
      <label for="name">Sales Person:</label>
      <select id="name" name="name" required>
        <option value="" disabled selected>Select a Sale Person</option>
        <% salesPeoples.forEach(type => { %>
          <option 
            value="<%= type.name %>" 
            data-cell="<%= type.cell %>" 
            data-email="<%= type.email %>" 
            data-role="<%= type.role %>"
          >
            <%= type.name %>
          </option>
        <% }); %>
      </select>
    </div>   
    <div class="signup-form-group">
      <label for="cell">Sales Contact:</label>
      <input type="text" id="cell" name="cell" readonly required />
    </div>   
    <div class="signup-form-group">
      <label for="email">Sales Email:</label>
      <input type="email" id="email" name="email" readonly required />
    </div>   
    <div class="signup-form-group">
      <label for="role">Sales Role:</label>
      <input type="text" id="role" name="role" readonly required />
    </div> 
      <button type="submit">Register Customer</button>
    </form>
    <br>
    <a href="/sales/dashboard">Back to Dashboard</a>
  </div>
  <script src="/js/form.js"></script>
</body>
</html>
